FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    git \
    curl \
    wget \
    libgomp1 \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY infrastructure/docker/requirements-agent.txt ./requirements-agent.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements-agent.txt

# Copy agent code
COPY agent/ ./agent/

# Create output directory
RUN mkdir -p /output

# Set Python path so imports work
ENV PYTHONPATH=/app

# Environment variable to list available libraries (for agent to know)
ENV AGENT_AVAILABLE_LIBS="pandas,numpy,scipy,scikit-learn,xgboost,lightgbm,catboost,optuna,nltk,textblob,pillow,opencv-python,statsmodels,tqdm,joblib,matplotlib,seaborn"

# Set entrypoint
ENTRYPOINT ["python", "/app/agent/main.py"]

